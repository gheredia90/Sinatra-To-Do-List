
<h1>Welcome to the todo list</h1>
<form action="/todos" method="post">
	<ul>
		<% @todos.list_of_todos.each do | todo | %>
			<li> <%= todo.pretty_print %><input type="checkbox" name=<%= todo.id.to_i %> value=<%= todo.id.to_i %> /> </li>	 	
		<% end %>
	</ul>
	<p>You have: <%="#{@hours_needed}"%> hours of todos left</p>
	<input type="submit" value="Delete selected ones">
</form>